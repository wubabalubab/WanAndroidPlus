<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.view.activity.CalanderActivity">

    <EditText
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/tv_date_select"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/dp_40"
        android:textSize="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_date_sure"
        android:text="sure"
        android:layout_toEndOf="@+id/tv_date_select"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/tv_date_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="@color/black"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/tv_date_total"
        android:layout_below="@+id/tv_date_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_date"
        android:background="@color/whrite"
        tools:itemCount="5"
        tools:listitem="@layout/item_calander_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_date_total"
        android:layout_centerHorizontal="true" />
</RelativeLayout>