<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context=".mvp.view.activity.PwdLoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        tools:background="@color/colorPrimary" />

    <EditText
        android:id="@+id/ed_actpwdlogin_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@null"
        android:backgroundTint="@color/colorPrimary"
        android:gravity="center_vertical"
        android:hint="用户名"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp" />

    <EditText
        android:id="@+id/ed_actpwdlogin_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="密码"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp" />

    <EditText
        android:id="@+id/ed_actpwdlogin_repassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        tools:visibility="visible"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="重复密码"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/bt_actpwdlogin_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bg_edit_login"
        android:text="登录" />

    <Button
        android:id="@+id/bt_actpwdlogin_register"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_edit_login"
        android:text="注册" />
</LinearLayout>