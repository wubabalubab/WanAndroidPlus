<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="@color/colorPrimary"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginEnd="10dp"
        android:id="@+id/tv_item_rv_fgproject_title"
        android:layout_width="wrap_content"
        android:textSize="16dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/whrite"
        tools:text="asdfasdf"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_item_rv_fgproject_author"
        android:layout_below="@id/tv_item_rv_fgproject_title"
        android:layout_width="wrap_content"
        android:textSize="12dp"
        android:textColor="@color/gray"
        tools:text="asdfasdf"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_alignStart="@+id/tv_item_rv_fgproject_title"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_item_rv_fgproject_classify"
        android:layout_below="@id/tv_item_rv_fgproject_title"
        android:layout_width="wrap_content"
        android:textSize="12dp"
        android:textColor="@color/gray"
        tools:text="asdfasdf"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/tv_item_rv_fgproject_author"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_item_rv_fgproject_classify2"
        android:layout_below="@id/tv_item_rv_fgproject_title"
        android:layout_width="wrap_content"
        android:textSize="12dp"
        android:textColor="@color/gray"
        tools:text="asdfasdf"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/tv_item_rv_fgproject_classify"
        android:layout_height="wrap_content"/>
</RelativeLayout>
</androidx.cardview.widget.CardView>