<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTheme">
        <item name="android:windowNoTitle">true</item>//无标题
        <item name="android:windowActionBar">false</item>//无ActionBar
        <item name="android:windowFullscreen">true</item>//全屏即无通知栏
        <item name="android:windowContentOverlay">@null</item>//是否有遮盖
    </style>
    <style name="splash" parent="MyTheme">
        <item name="android:background">@drawable/splash</item>
    </style>
    <style name="TablayoutCustom" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/colorAccentblue</item>
        <item name="tabIndicatorColor">@color/blue</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabGravity">center</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15dp</item>
    </style>
</resources>
